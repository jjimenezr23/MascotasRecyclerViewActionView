<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foregroundGravity="center_vertical|center|center_horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/imagenperroCV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/mastin_espa_ol"
            android:layout_gravity="center_vertical"
            />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >

        <ImageButton
            android:id="@+id/imagenlikeCV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dog_bone_48"
            android:layout_marginLeft="@dimen/marginleft"
            android:background="@color/colortoolbar"

            />
        <TextView
            android:id="@+id/nombreCV"
            android:layout_width="@dimen/widthtv"
            android:layout_height="wrap_content"
            android:text="@string/textoPerro"
            android:layout_marginLeft="@dimen/leftmargin"
            android:textSize="@dimen/textnombre"

            />

    <TextView
        android:id="@+id/tvReitingcv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/numero_like"
        android:layout_marginLeft="@dimen/marginleft"
        android:textSize="@dimen/textnombre"
        />

    <ImageView
        android:id="@+id/imgreitingCV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dog_bone_48_color"
        android:layout_marginLeft="@dimen/marginleft"
        />


</LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>